
{
  "name": "ott-content-service",
  "version": "1.0.0",
  "description": "Content management service for OTT platform",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:integration": "jest --testNamePattern='Integration' --detectOpenHandles --forceExit",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "seed": "npx sequelize-cli db:seed:all",
    "seed:undo": "npx sequelize-cli db:seed:undo:all"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/coverage/**",
      "!jest.config.js"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "verbose": true
  },
  "keywords": ["ott", "content", "streaming", "microservice"],
  "author": "OTT Platform Team",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.7.0",
    "sequelize": "^6.32.1",
    "mysql2": "^3.6.0",
    "firebase-admin": "^11.10.1",
    "joi": "^17.9.2",
    "aws-sdk": "^2.1404.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "axios": "^1.4.0",
    "sequelize-cli": "^6.6.1"
  }
}
